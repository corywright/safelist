<%= link_to 'Add New Member', {:action => 'new', :controller => 'organization_members'}, :class => 'textbutton'  %>
<br /><br />

<table>
  <tr>
  <% for column in OrganizationMember.content_columns %>
    <th class="horizontal"><%= column.human_name %></th>
  <% end %>
    <th class="horizontal">Department</th>
  </tr>
  
<% for organization_members in @organization_members %>
  <tr>
  <% for column in OrganizationMember.content_columns %>
    <td><%=h organization_members.send(column.name) %></td>
  <% end %>
	<td><%=h organization_members.department.name if organization_members.department %></td>
    <td><%= link_to 'Show', {:action => 'show', :controller => 'organization_members', :id => organization_members}, :class => 'textbutton'  %></td>
    <td><%= link_to 'Edit', {:action => 'edit', :controller => 'organization_members', :id => organization_members}, :class => 'textbutton'  %></td>
  </tr>
<% end %>
</table>

<%= link_to '<< Previous', { :page => @organization_members_pages.current.previous }, :class =>'textbutton'  if @organization_members_pages.current.previous %>
<%= link_to 'Next page', { :page => @organization_members_pages.current.next }, :class =>'textbutton'  if @organization_members_pages.current.next %> 


