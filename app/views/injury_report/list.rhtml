<div class="header">
<%= link_to 'Home', '/', :class => 'textbutton'  %>
</div>

<h2>Injury Report List</h2>

<table>
  <tr>
  	<th>#</th>
  <% for column in InjuryReport.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
        <th>Name</th>
  	<th></th>
  </tr>
<% set_counter :injury, @injury_report_pages.current.offset %>  
<% for injury_report in @injury_reports %>
  <tr class="<%=h row_style :injury %>">
  	<th class="counter"> <%=h counter :injury %></th>
  <% for column in InjuryReport.content_columns %>

    <td><%=h injury_report.send(column.name) %></td>
  <% end %>
  <td><%= injury_report.person.name %></td>
    <td><%= link_to 'Show', {:action => 'show', :id => injury_report}, :class => 'textbutton'  %>
        <%= link_to 'Edit', {:action => 'edit', :id => injury_report}, :class => 'textbutton'  %>
        <%= link_to 'Delete', {:action => 'destroy', :id => injury_report}, :class =>'textbuttonwarn' , :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @injury_report_pages.current.previous }, :class =>'textbutton'  if @injury_report_pages.current.previous %>
<%= link_to 'Next page', { :page => @injury_report_pages.current.next }, :class =>'textbutton'  if @injury_report_pages.current.next %> 

<br />

