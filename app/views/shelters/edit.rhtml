<div class="header">
<%= link_to 'Shelter List', {:action => 'list'}, :class => 'textbutton'  %>
<%= link_to 'View Shelter', {:action => 'show', :id => @shelter}, :class => 'textbutton'  %>
<div align="right" class="help">
	<a href="http://www.sasafelist.org/kwiki/index.cgi?SafeList<%= controller.controller_name.capitalize %><%= controller.action_name.capitalize %>"
	 class="textbuttonhelp" target="_help"> HELP </a></div>
</div>
</div>

<h2>Edit a Shelter</h2>

<%= start_form_tag :action => 'update', :id => @shelter %>
  <%= render_partial 'form' %>
  <%= submit_tag 'Save' %>
<%= end_form_tag %>



